{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-I/usr/include",
				"-I/home/elisa/Downloads/Dev/json/include",
                "-L/usr/lib",
                "-lSDL2",
                "-lSDL2_image",
				"-lSDL2_ttf",
				"-g",
				"${fileDirname}/screens/*.cpp",
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/bin/x86_64/rausermgr"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "Compilar pro ambernic (ARM64)",
			"command": "/usr/bin/aarch64-linux-gnu-g++",
			"args": [
				"-fdiagnostics-color=always",
				"-fpermissive",
				"-I/usr/include",
				"-Wl,-rpath-link,/home/elisa/Downloads/Dev/Anbernic/Libs",
                "-L/home/elisa/Downloads/Dev/Anbernic/Libs",
                "-lSDL2",
                "-lSDL2_image",
				"-lSDL2_ttf",
				"-g",
				"${fileDirname}/screens/*.cpp",
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/bin/aarch64/rausermgr"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}